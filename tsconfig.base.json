{
  "compilerOptions": {
    
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@agenteract/core": ["packages/core/src"],
      "@agenteract/core/*": ["packages/core/src/*"],
      "@agenteract/dom": ["packages/dom/src"],
      "@agenteract/dom/*": ["packages/dom/src/*"],
      "@agenteract/pty": ["packages/pty/src"],
      "@agenteract/pty/*": ["packages/pty/src/*"],
      "@agenteract/react": ["packages/react/dist/react/src"],
      "@agenteract/react/*": ["packages/react/src/*"]
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
 