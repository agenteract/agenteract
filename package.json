{
  "name": "agenteract",
  "version": "0.1.0",
  "description": "Agenteract - agent to app interaction framework",
  "license": "MIT",
  "author": "Michael Ribbons",
  "private": true,
  "scripts": {
    "build": "pnpm --filter \"@agenteract/core\" build && pnpm --filter \"@agenteract/pty\" build && pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "pnpm --parallel --filter \"@agenteract/*\" run dev",
    "test": "pnpm -r test && pnpm test:version && echo \"Ran without flutter because they run separately in CI.\"",
    "test:flutter": "cd packages/flutter && flutter test && cd ../../examples/flutter_example && flutter test",
    "test:version": "jest --config scripts/jest.config.js scripts/version.test.ts",
    "test:integration": "tsx tests/integration/install-packages.test.ts",
    "test:e2e:vite": "tsx tests/e2e/vite/test-app-launch.ts",
    "test:e2e:expo:ios": "tsx tests/e2e/expo/test-app-launch-ios.ts",
    "test:e2e:flutter:ios": "tsx tests/e2e/flutter/test-app-launch-ios.ts",
    "test:e2e:swift:ios": "tsx tests/e2e/swiftui/test-app-launch-ios.ts",
    "test:e2e:kotlin": "tsx tests/e2e/kotlin/test-app-launch.ts",
    "test:e2e:kotlin:ios-build": "tsx tests/e2e/kotlin/test-app-launch.ts --platform=ios",
    "test:e2e:kotlin:android": "tsx tests/e2e/kotlin/test-app-launch.ts --platform=android",
    "test:e2e:all": "pnpm test:e2e:vite && pnpm test:e2e:expo:ios && pnpm test:e2e:flutter:ios && pnpm test:e2e:swift:ios",
    "test:e2e:cleanup": "tsx tests/e2e/cleanup-all.ts",
    "verdaccio:start": "tsx scripts/start-verdaccio.ts",
    "verdaccio:stop": "tsx scripts/stop-verdaccio.ts",
    "verdaccio:publish": "tsx scripts/publish-local.ts",
    "verdaccio:test": "tsx scripts/test-verdaccio-auth.ts",
    "version:check": "tsx scripts/check-package-versions.ts",
    "version:patch": "tsx scripts/version.ts patch",
    "version:minor": "tsx scripts/version.ts minor",
    "version:major": "tsx scripts/version.ts major",
    "version:alpha": "tsx scripts/version.ts alpha",
    "version:beta": "tsx scripts/version.ts beta",
    "version:rc": "tsx scripts/version.ts rc",
    "test:full_integration": "pnpm verdaccio:start && pnpm verdaccio:publish && pnpm test:integration && pnpm verdaccio:stop"
  },
  "keywords": [
    "agent",
    "coding agent",
    "app framework",
    "react",
    "react-native",
    "web",
    "vscode",
    "vscode extension",
    "vscode extension api"
  ],
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@agenteract/cli": "workspace:*",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "puppeteer": "^24.29.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "ws": "^8.18.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "tar": ">=7.5.2"
    }
  }
}
