{
  "name": "agenteract",
  "version": "0.0.2",
  "description": "Agenteract - agent to app interaction framework",
  "license": "MIT",
  "author": "Michael Ribbons",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "dev": "pnpm --parallel --filter \"@agenteract/*\" run dev",
    "test": "pnpm -r test",
    "test:integration": "bash tests/integration/install-packages.test.sh",
    "verdaccio:start": "bash scripts/start-verdaccio.sh",
    "verdaccio:stop": "bash scripts/stop-verdaccio.sh",
    "verdaccio:publish": "bash scripts/publish-local.sh",
    "verdaccio:test": "bash scripts/test-verdaccio-auth.sh",
    "version:patch": "bash scripts/version.sh patch",
    "version:minor": "bash scripts/version.sh minor",
    "version:major": "bash scripts/version.sh major",
    "version:alpha": "bash scripts/version.sh alpha",
    "version:beta": "bash scripts/version.sh beta",
    "version:rc": "bash scripts/version.sh rc",
    "test:full_integration": "pnpm verdaccio:start && pnpm verdaccio:publish && pnpm test:integration; pnpm verdaccio:stop"
  },
  "keywords": [
    "agent",
    "coding agent",
    "app framework",
    "react",
    "react-native",
    "web",
    "vscode",
    "vscode extension",
    "vscode extension api"
  ],
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.0"
    }
  }
}
