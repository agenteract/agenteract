{
  "name": "@agenteract/cli",
  "version": "0.0.8",
  "description": "The unified command-line interface for Agenteract",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "agenteract": "dist/src/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.tsbuildinfo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/agenteract/agenteract.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/agenteract/agenteract#readme",
  "bugs": {
    "url": "https://github.com/agenteract/agenteract/issues"
  },
  "keywords": [
    "agenteract",
    "agent",
    "cli",
    "coding-agent",
    "react-native",
    "expo",
    "vite",
    "ios",
    "android"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "shx rm -rf dist .tsbuildinfo*",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "jest --config jest.config.cjs"
  },
  "dependencies": {
    "@agenteract/core": "workspace:*",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "yargs": "^17.7.2"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.0"
  }
}
