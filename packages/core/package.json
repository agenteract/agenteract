{
  "name": "@agenteract/core",
  "version": "0.2.0",
  "description": "Core message schema, bridge protocol, and shared utilities for Agenteract",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/cjs/src/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/package.json",
    "!dist/**/*.tsbuildinfo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/agenteract/agenteract.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/agenteract/agenteract#readme",
  "bugs": {
    "url": "https://github.com/agenteract/agenteract/issues"
  },
  "keywords": [
    "agenteract",
    "agent",
    "bridge",
    "protocol",
    "coding-agent"
  ],
  "scripts": {
    "build": "pnpm run build:types && pnpm run build:cjs && pnpm run build:esm && pnpm run build:post",
    "build:types": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:post": "shx mkdir -p dist/cjs dist/esm && node ../../scripts/write-package-json.js commonjs dist/cjs/package.json && node ../../scripts/write-package-json.js module dist/esm/package.json",
    "clean": "shx rm -rf dist .tsbuildinfo*",
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js",
      "types": "./dist/cjs/src/index.d.ts"
    },
    "./node": {
      "import": "./dist/esm/src/node/index.js",
      "require": "./dist/cjs/src/node/index.js",
      "types": "./dist/cjs/src/node/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ws": "^8.18.3"
  },
  "peerDependencies": {
    "puppeteer": ">=21.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.0"
  }
}
